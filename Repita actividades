<h1>PROGRAMA - Estrellas</h1>

<script>
	function BR() {
		document.write("<br>");
	}

	function print(text) {
		document.write(text);
		BR();
	}


	for (var lin = 1; lin <= 3; lin++) {
		 
		for (var col = 1; col <= 10; col++){
		 document.write("*");
		}

		BR();
	}

</script>

