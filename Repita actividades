<h1>PROGRAMA AÑO MUNDIAL DE LA FIFA</h1>

<script>

	function BR() {
		document.write("<br>");
	}

	function print(text){
		document.write(text);
		BR();
	}

	var aMundial = 1930;
	var lim = parseInt(prompt("Ingrese el año limite a calcular"))

	//alert("Hubo mundial de la FIFA en el año " + aMundial);

	//While se utiliza como loop para no repetir muchas lineas de codigo

	while(aMundial <= lim){

		print("Hubo mundial de la FIFA en el año " + aMundial);
		aMundial = aMundial + 4;
		}

	//alert("Fin");



</script>


