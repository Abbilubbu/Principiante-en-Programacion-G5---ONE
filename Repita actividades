<h1>PROGRAMA - CALCULAR LA MEDIA DE LAS EDADES DE UNA FAMILIA</h1>

<script>

	function BR() {
		document.write("<br>");
	}

	function print(text){
		document.write(text);
		BR();
	}

	/*var ageD = 42;
	var ageM = 38;
	var ageB = 15;
	var ageS = 12;

	var ageT = ageS + ageB + ageD + ageM;
	var ageMe = ageT / 4;

	print("La media de las edades es " + ageMe);*/

	var NM = parseInt(prompt("Ingrese la cantidad de miembros de su familia"));
	var C = 1;
	var Tage = 0;

	while(C <= NM){

		age = parseInt(prompt("Ingrese la edad del familiar"));
		Tage = Tage + age;
		C++;

	}

	ageMed = Tage / NM;
	print("La media de la familia es " + ageMed); 

</script>

