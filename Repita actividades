<h1>PROGRAMA - JUEGO DE ADIVINACION</h1>

<script>
	function BR() {
		document.write("<br>");
		document.write("<br>");
		document.write("<br>");
	}

	function print(text) {
		document.write(text);
		BR();
	}

	//Math.random formula usada para numeros aleatorios
	//Colocamos *10 para establecer un limite entre 0 y 10 y Math.round para redondear el resultado

	//Break para el codigo en while

	var nuPensado = Math.round(Math.random()* 10);
	var Int = 3;
	var C = 1;


	while(C <= Int){

		var nuLanzado = parseInt(prompt("Ingrese un numero entre 0-10"))

			if (nuPensado == nuLanzado) {
				alert("Usted acertó, en el intento " + C + " el numero pensado era " + nuPensado);
				break;
			}

			else{
				alert("Usted erró")
			}

			C++;

			}

			if (nuPensado == nuLanzado) {
				print("Usted acertó, en el intento " + C + " el numero pensado era " + nuPensado);
			}

			else{
				print("Usted erró, el numero pensado era " + nuPensado);
			}


	//Java utiliza != para identificar que es diferente

	/*if (nuPensado != nuLanzado) {
		print("Usted erro, el numero pensado era " + nuPensado)
	}*/

</script>
